{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "target": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "shared/*": ["shared/*"],
      "@runtime": ["runtime/index.ts"]
    }
  },
  "include": ["e2e/**/*.ts", "src/**/*"]
}
